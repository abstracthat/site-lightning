body
  font-family font-stack
  // font-size / line-height is in settings.styl

p, li
  font-size inherit
  line-height inherit
  color black + 20%

p, ul, ol
  rhythm()

// Placeholder for larger paragraph style
$lead-paragraph
  font-size 1.25em
  line-height 1.5

time
  display inline-block
  font-style italic
  color gray

strong
  font-weight 600

// Lists
ul
  list-style-type square

li
  display list-item
  margin-left 1.3em

// Headers
h1
  rhythm()
  font-size 2.6rem
  line-height 1.2
  font-weight 800

  +above(desktop)
    font-size 4.5rem
    line-height 1.08

h2
  rhythm .25
  font-size 1.625rem
  line-height 1.2
  font-weight 600

  +above(mobile)
    font-size 1.875rem

  +above(desktop)
    font-size 2rem

h3
  rhythm .25
  font-size 1.375rem
  line-height 1.2
  font-weight 600
  color black + 20%

  +above(mobile)
    font-size 1.4rem

  +above(desktop)
    font-size 1.6rem

h4, h5, h6
  rhythm .25
  font-size 1.125rem
  line-height 1.4
  font-weight 600
  color black + 20%

  +above(desktop)
    font-size 1.125rem

h5, h6
  text-transform uppercase

// Links
a
  link blue 'darken'
