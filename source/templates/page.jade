extends base

block vars

block body
  //- Main Page Container
  .page

    //- Main Site Header & Menu
    block header
      +site-header

    //- The main content
    article.main(role='main')
      block main

        //- The page header for the main content
        block page-header
          header.page-header
            h1!= title

        //- the content (prose)
        section.content
          block content

            //- Markdown files get rendered here
            != contents

    //- Promotion / email optin form
    block promotion
      section.promotion
        include ../content/_includes/promotion
    //- Main Site Footer
    block footer
      +site-footer
