.collection

  .intro
    rhythm()
    border-bottom 2px dotted silver
    
    +above(4)
      padding-top base
      border-top @border-bottom

  .article
    rhythm()
    padding-bottom base
    border-bottom 2px dotted silver

    &:last-child
      padding-bottom 0
      border-bottom none

    h2
      @extends h3
      rhythm()

    p
      rhythm .5

    a
      link darken(olive, 30%), 'lighten'
      font-weight 600

    img
      rhythm .5
