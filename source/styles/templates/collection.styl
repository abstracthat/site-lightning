.collection

  .intro
    rhythm()
    border-bottom 2px dotted silver

    +above(4)
      padding-top base
      border-top @border-bottom

    p:first-child
      font-size 1.2em  

  // Index section that lists pages in this collection
  // .articles

  .summary
    rhythm()
    padding-bottom base
    border-bottom 2px dotted silver

    &:last-child
      padding-bottom 0
      border-bottom none

    h2
      @extends h3
      rhythm .5

    p
      rhythm .5

    a
      link darken(olive, 30%), 'lighten'
      font-weight 600

    img
      rhythm .5
