body
  background-color white - 15%

.container
  center()
  background-color white

.page
  offcanvas(
    side: 'top',
    size: 15em,
    push: 0px,
    show: false,
    menu: '.menu',
    content: '.content'
    )

.menu
  height 50em
  background-color black + 10%
  p
    color white - 20%

article
  center medium
  padding-sides()
  padding-vertical base

  +above(mobile)
    padding 0

  +above(large)
    padding-vertical large-base

h1.logo
  background url('/images/lightning.jpg')
  background-size 100%
  color white
  text-align center
  margin 0 auto
  padding-vertical()

  a
    color white

  +above(desktop)
    padding-vertical 6rem

.button
  button olive
  font-size 1.2em
  font-weight 600