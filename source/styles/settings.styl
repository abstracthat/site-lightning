// Font stacks
open-sans = "Open Sans", "Helvetica Neue", Helvetica, sans-serif
garamond = "adobe-garamond-pro", "Garamond", Times New Roman, serif

font-stack = open-sans

// Set the baseline grid
body-font-size = 1rem
body-line-height = 1.5
// Give a boost to the size of the baseline grid for large screens
desktop-ratio = 1.08

// Breakpoints (http://jenius.github.io/rupture/)
mobile = rupture.mobile-cutoff = mobile-cutoff = 28rem
tablet = tablet-cutoff = 40rem
desktop = rupture.desktop-cutoff = desktop-cutoff = 53rem
site = rupture.hd-cutoff = site-max-width = max-site-width = max-width = 55rem
rupture.scale = 0 (mobile) (mobile + ((tablet - mobile) / 2)) (tablet) (desktop) (site)

// Grid Settings (https://github.com/corysimmons/lost)
// gutter can be any unit
// $gutter is used by Lost Grid
gutter = $gutter = g = 3%

// Clearfix Aliases
group = cf = clearfix