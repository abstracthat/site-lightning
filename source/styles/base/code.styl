// Inline Code
code
  padding 1px 6px
  color inherit
  background-color white - 5%
  border-radius 3px
  font-size .85em
  word-break break-word
  font-family Menlo, Monaco, monospace

// Code Blocks
pre
  rhythm()

code.hljs
  pad()
  overflow-x scroll
  font-size .95em
  white-space pre-wrap
  word-break normal
