// Browser Reset
// This is on top of normalize.css which is already included

// Nicer typography, better scrolling, Border box everything,
// overflow-x for full-width() mixin
html
  height 100%
  overflow-x hidden
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  -webkit-tap-highlight-color transparent
  box-sizing border-box

*, *:before, *:after
  box-sizing inherit

body
  group()
  height 100%
  overflow-x hidden
  overflow-y scroll
  -webkit-overflow-scrolling touch

h1,
h2,
h3,
h4,
h5,
h6
  text-rendering optimizeLegibility

// Reset commonly used elements
h1,
h2,
h3,
h4,
h5,
h6,
p,
ul,
ol,
figure,
button
  margin 0
  padding 0

// plain links
a
  font inherit
  color inherit
  text-decoration none
  color inherit

  &:focus
    outline 0

// plain buttons, no outlines, backgrounds or borders
button
  border 0
  letter-spacing inherit
  background none
  -webkit-font-smoothing inherit

  &:focus
    outline 0

// plain hr
hr
  border none
  margin 0
  height 0

// fluid width responsive media
img,
video,
audio,
iframe,
embed,
object
  max-width 100%
  height auto
  border 0
  -ms-interpolation-mode bicubic
  display block
