h1,
h2,
h3,
h4
  color #000000 !important
  font-family header-font-stack
  font-weight 700
  line-height 1.2
  margin 0 0 (padding * 2) 0

h1
  font-size 38px

h2
  font-size 24px

h3
  font-size 18px
  font-weight 600

h4
  font-size 14px
  font-weight 600

p,
ul,
ol
  font-family font-stack
  font-size 16px
  font-weight normal
  margin 0 0 (padding * 2)
  padding 0

  li
    list-style-position inside
    margin-left 5px
    padding 0
 
a
  color primary-color
  text-decoration underline

a.logo
  @extends h2
  color gray !important
  margin 0
  text-decoration none
